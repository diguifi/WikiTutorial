<div class="row clearfix" ng-controller="app.views.products.product_index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("Products")
                </h2>
            </div>
            <div class="body table-responsive">
                <!-- ******************************************************** -->
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>@L("Name")</th>
                            <th>@L("Description")</th>
                            <th>@L("Value")</th>
                            <th>@L("Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="product in vm.products">
                            <td>{{product.name}}</td>
                            <td>{{product.description}}</td>
                            <td>$ {{product.value}}</td>
                            <td>
                                <select ng-model="vm.selected" ng-change="vm.optionSelected(product)">
                                    <option value="Edit">@L("Edit")</option>
                                    <option value="Delete">@L("Delete")</option>
                                </select>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- ******************************************************** -->
                <div class="col-lg-12">
                    <div class="pull-right">
                        <button class="btn bg-success text-white overdue"
                                ng-click="vm.createProduct()">
                            <span class="fa fa-plus text-white">&nbsp;</span>@L("New")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>